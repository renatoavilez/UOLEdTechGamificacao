{
  "ApplicationConfig": {
    "ArquivoLeitura": "Dados do ERP.txt",
    "ArquivoEscrita": "ArquivoResultado.txt",
    "ArquivoJson": "leitura.json",
    "HorasEntreExecucao": 24,
    "Niveis": [ 50, 30, 10, 8 , 2]
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      "Console",
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:dd/MM/yyyy HH:mm:ss} | Message: {Message} Exception: {Exception} {NewLine}"
        }
      }
    ]
  }
}